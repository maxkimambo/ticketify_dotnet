@model IEnumerable<Ticket.Domain.Bus>
<div class="panel panel-green margin-bottom-40">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-home"></i> Busses</h3>
    </div>
    <div class="panel-body">
        
        <table id="bustable" class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Registration</th>
                    <th>Capacity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bus in Model)
                {
                    <tr>
                        <td>@bus.Number</td>
                        <td>@bus.Capacity</td>
                        <td><a href="#"> <i class="fa fa-edit"></i> </a> </td>
                    </tr>
                }
               
            </tbody>
        </table>
        
        

        @{
            var bussesOptions = new AjaxOptions()
                                    {
                                        HttpMethod = "POST",
                                        Url = Url.Action("UpdateBusses", "Company"),
                                        InsertionMode = InsertionMode.InsertAfter,
                                        UpdateTargetId = "request-result",
                                        OnSuccess = "ticketify.autoHide"
                                    };
        }

        @using (Ajax.BeginForm(bussesOptions))
        {
            @Html.AntiForgeryToken()

            <div id="request-result" class="auto-hide">

            </div>

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                
            </div>
        }
    </div>
</div>


